<h1>Articles listings</h1>

<table>
    <thead>
        <tr>
            <th colspan=4>Title</th>
            <th colspan=3>Description</th>
            <th colspan=3>actions</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |article| %>
        <tr>
            <td colspan=4><%= article.title  %></td>
            <td colspan=4><%= article.description %></td>
            <td colspan=2><button>actions</button></td>
        </tr>
        <% end %>
    </tbody>
</table>
<p><a href="/articles/new">create new article</a></p>