<h2>Add new article</h2>
<%= form_with scope: :article, url: articles_path, local: true do |f| %>

<p>
<%= f.label :title %>
<%= f.text_field :title %>
</p>
<p>
<%= f.label :description %>
<%= f.text_area :description %>
</p>


<p>
<%= f.submit %>
</p>


<% end %>
<p><a href="/articles/">Back</a></p>